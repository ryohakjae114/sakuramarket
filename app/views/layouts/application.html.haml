!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Sakuramarket
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_include_tag "application", "data-turbo-track": "reload", type: "module"
  %body
    %nav.navbar.navbar-expand-lg.bg-body-tertiary
      .container-fluid
        %a.navbar-brand{href: "#"} さくらまーけっと
        %button.navbar-toggler{"aria-controls" => "navbarNavDropdown", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-bs-target" => "#navbarNavDropdown", "data-bs-toggle" => "collapse", type: "button"}
          %span.navbar-toggler-icon
        #navbarNavDropdown.collapse.navbar-collapse
          %ul.navbar-nav
            %li.nav-item
            = link_to '商品', foods_path, class: 'nav-link'
            %li.nav-item
              = link_to 'カート', cart_path, class: 'nav-link'
            - if user_signed_in?
              %li.nav-item
                = link_to '購入履歴', purchases_path, class: 'nav-link'
              %li.nav-item
                = link_to 'アカウント情報', edit_user_registration_path, class: 'nav-link'
              %li.nav-item
                = button_to destroy_user_session_path(@food), { class: 'nav-link', method: :delete, data: { turbo_confirm: "ログアウトしますか？" } } do
                  ログアウト
            - else
              %li.nav-item
                = link_to 'ログイン', new_user_session_path, class: 'nav-link'
              %li.nav-item
                = link_to 'アカウント作成', new_user_registration_path, class: 'nav-link'
    - flash.each do |message_type, message|
      %div{ class: "alert alert-#{message_type == 'notice'? 'success' : 'danger' } fade show alert-dismissible" }
        = message
        %button.btn-close{'aria-label' => 'Close', 'data-bs-dismiss' => 'alert', type: 'button'}
    .container.mt-5
      = yield
