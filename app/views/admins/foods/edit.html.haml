.col-6.mx-auto
  %h1 商品詳細画面
  %p.mt-5 現在の商品写真
  = image_tag(@food.image.url, class: 'w-25 mb-5')
  = simple_form_for [:admins, @food] do |f|
    = f.input :image, input_html: { value: @food.image.url }, label: '新しい商品写真'
    = f.input :name
    = f.input :price_without_tax
    = f.input :description
    = f.input :displayed
    = f.input :position

    = f.submit '変更', class: 'btn btn-primary'
